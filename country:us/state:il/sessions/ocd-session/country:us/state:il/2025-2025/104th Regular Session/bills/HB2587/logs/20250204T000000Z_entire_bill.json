  "title": "CRIM CD-FIREARM-WAITING PERIOD",
  "from_organization": "~{\"classification\": \"lower\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Criminal Code of 2012. Provides that the 72-hour waiting period before delivery of a concealable firearm after application for its purchase has been made does not apply to a person who has been issued a valid license to carry a concealed handgun under the Firearm Concealed Carry Act. Effective immediately."
    }
  ],
