  "title": "TAX REVENUE POLICIES",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "joint resolution"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Urges the State of Illinois to make needed investments in Illinois communities by raising $6 billion in new revenue from the ultra-wealthy and mega-corporations. Affirms that, in addition to funding these critically-needed services, implementing these revenue policies will have the benefit of making our State's tax system less unfair to the lowest income Illinoisans."
    }
  ],
