  "legislative_session": "104th",
  "identifier": "SB1587",
  "title": "CRIMINAL JUSTICE REFORM",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Illinois Criminal Justice Information Act and the Uniform Crime Reporting Act. Provides that, beginning January 1, 2026, the Illinois State Police shall submit to the Illinois Criminal Justice Information Authority, or provide to the Authority through a web-based portal, specified information concerning homicides on a quarterly basis. Requires the Authority to study and compile the information and, on a quarterly basis, publish the information on the Authority's public website in a form determined by the Authority."
    }
  ],
