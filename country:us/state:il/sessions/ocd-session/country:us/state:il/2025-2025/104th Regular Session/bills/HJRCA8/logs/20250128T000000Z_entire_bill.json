  "title": "REVENUE-EDUCATION",
  "from_organization": "~{\"classification\": \"lower\"}",
  "classification": [
    "constitutional amendment"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Proposes to amend the Revenue Article of the Illinois Constitution. Provides that an additional income tax shall be imposed on individuals in an amount equal to 3% of the portion of the individual's income that is greater than $1,000,000 for the taxable year. Provides that the revenue collected from the tax shall be distributed to school districts on a per pupil basis. Effective upon being declared adopted."
    }
  ],
