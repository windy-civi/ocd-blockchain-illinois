  "identifier": "SB1627",
  "title": "RELIGIOUS FREEDOM-BURDEN",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Religious Freedom Restoration Act. Provides that any order, rule, regulation, or other directive issued by government pursuant to an emergency, health, or safety determination that requires closure or limitation of any place of worship entitled to the religious exemption found in Section 501(c)(3) of Title 26 of the United States Code is considered a substantial burden even if the order, rule, regulation, or other directive is one of general applicability."
    }
  ],
