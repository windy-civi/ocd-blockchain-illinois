{
  "legislative_session": "104th",
  "identifier": "SB1541",
  "title": "CONSUMER FRAUD-RECEIPTS",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Consumer Fraud and Deceptive Business Practices Act. Provides that any printed or digital receipt issued or made available to a consumer by a retail seller at the time of sale must clearly list the single unit price of each individual item purchased by the consumer regardless of the number or quantity of each individual item purchased by the consumer at the time of sale. Provides that a retail seller who violates this requirement commits an unlawful practice within the meaning of the Act."
    }
  ],
