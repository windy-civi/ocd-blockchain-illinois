  "identifier": "HB2865",
  "title": "ESTATE TAX-PHASE OUT",
  "from_organization": "~{\"classification\": \"lower\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Illinois Estate and Generation-Skipping Transfer Tax Act. Provides that the amount of the taxes imposed under the Act shall be reduced in each year by 20%. Provides that no tax shall be imposed under the Act for persons dying on or after January 1, 2030 or for transfers occurring on or after January 1, 2030. Provides that the Act is repealed on January 1, 2031. Effective immediately."
    }
  ],
