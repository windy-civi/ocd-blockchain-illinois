  "identifier": "HB3802",
  "title": "EPA-LANDFILL GAS MGMT",
  "from_organization": "~{\"classification\": \"lower\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Environmental Protection Act. Provides gas collection and control system requirements for municipal solid waste landfills, including requirements for gas to be collected from each area in which solid waste has been in place for at least one year, for gas to be drawn toward the gas control devices, for a gas collection and control system to be installed within 12 months of reaching certain thresholds, for gas collection and control design plans to provide for alternative preliminary measures, and for the methane destruction efficiency of flared systems to reach 99%."
    }
  ],
