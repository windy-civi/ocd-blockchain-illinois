  "title": "USE/OCC TAX-HOLIDAY",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Use Tax Act and the Retailers' Occupation Tax Act. Provides that, from August 6, 2025 through August 8, 2025, and from August 13, 2025 through August 15, 2025, the tax imposed under the Acts on clothing and school supplies shall be at the rate of 1.25% (instead of 6.25%). Effective immediately."
    }
  ],
