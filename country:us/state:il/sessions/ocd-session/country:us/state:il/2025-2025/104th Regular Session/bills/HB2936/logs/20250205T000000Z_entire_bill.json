  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the School Code. Provides that a school district shall not enter into an agreement that rescinds an employment contract entered into with an administrative employee in exchange for a payment that exceeds an amount greater than 6 time the monthly salary of the employee, due to the unsatisfactory performance of the employee's duties."
    }
  ],
