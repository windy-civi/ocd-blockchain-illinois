  "title": "SCH CD-APPOINTED STATE WORK",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the School Code. Provides that any public school employee who is a member of a statewide association and is appointed to a State board, advisory council, committee, commission, or task force to represent the association in State work may spend up to 10 days during a school term representing the association in State work. Provides that no deduction of wages may be made for such absence. Effective immediately."
    }
  ],
