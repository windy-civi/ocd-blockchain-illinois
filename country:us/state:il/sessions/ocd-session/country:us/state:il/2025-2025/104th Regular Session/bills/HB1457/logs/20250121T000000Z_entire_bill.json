  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Illinois Estate and Generation-Skipping Transfer Tax Act. Increases the exclusion amount from $4,000,000 to $12,060,000 for persons dying on or after January 1, 2026. Effective immediately."
    }
  ],
