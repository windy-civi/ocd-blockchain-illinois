{
  "legislative_session": "104th",
  "identifier": "SB1658",
  "title": "JAIL RELEASE-OPIOID ANTAGONIST",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the County Department of Corrections Division of the Counties Code, the Unified Code of Corrections, and the County Jail Act. Provides that, upon the release of a prisoner or committed person from a county correctional institution, county jail, or Department of Corrections correctional institution or facility, the sheriff, warden, or Department shall provide the prisoner or committed person with an opioid antagonist if the prisoner was incarcerated for drug-related charges or was identified as having a substance abuse disorder."
    }
  ],
