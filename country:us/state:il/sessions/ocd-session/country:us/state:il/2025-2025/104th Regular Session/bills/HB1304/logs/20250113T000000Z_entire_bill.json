  "identifier": "HB1304",
  "title": "LOCAL GOVT RECALL ELECTION",
  "from_organization": "~{\"classification\": \"lower\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Creates the Local Government Elected Official Recall Act. Provides that local officeholders who were elected during a general or consolidated election may be recalled under the Act. Establishes petition requirements for recall elections. Limits home rule powers."
    }
  ],
