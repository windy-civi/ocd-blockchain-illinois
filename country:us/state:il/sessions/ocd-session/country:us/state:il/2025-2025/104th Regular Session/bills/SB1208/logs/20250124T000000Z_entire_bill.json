{
  "legislative_session": "104th",
  "identifier": "SB1208",
  "title": "CONCEALED CARRY-RECIPROCITY",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Firearm Concealed Carry Act. Provides that a non-resident may carry a handgun under the Act if the non-resident is 21 years of age or older, has a license or permit in a state where the training requirements are substantially similar under the Act or to non-residents of contiguous states if a reciprocal agreement has been entered into, the license or permit holder is not a resident of Illinois, and the license or permit holder is a legal resident of the United States. Provides that a non-resident is subject to the same laws and restrictions as a license holder under the Act. Provides that if a resident of another state who is permitted to carry under this provision establishes legal residence in this State, the license or permit shall be valid in this State for 90 days following the date on which the holder of the license or permit establishes legal residence in this State. Effective immediately."
    }
  ],
