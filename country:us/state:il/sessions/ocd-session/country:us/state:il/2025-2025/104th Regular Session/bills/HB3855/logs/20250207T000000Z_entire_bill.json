  "identifier": "HB3855",
  "title": "EPA-LEAD SERVICE LINES",
  "from_organization": "~{\"classification\": \"lower\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Environmental Protection Act. Provides that a community water supply reporting more than 99,999 lead service lines in its final inventory and replacement plan shall replace all lead service lines, at an annual rate of no less than 2% of the amount described in the final inventory, with a timeline of up to 35 years (rather than 50 years) for completion."
    }
  ],
