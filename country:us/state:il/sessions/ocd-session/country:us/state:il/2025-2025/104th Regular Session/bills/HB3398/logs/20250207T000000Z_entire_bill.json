  "title": "UTILITY-RECEIPT OF PAYMENT",
  "from_organization": "~{\"classification\": \"lower\"}",
  "classification": [
    "bill"
  ],
  "subject": [],
  "abstracts": [
    {
      "note": "",
      "abstract": "Amends the Public Utilities Act. Provides that the date of receipt for a payment for a utility bill or invoice shall be the date a payment or payment instrument is presented to or arrives at the utility or its agent or vendor or the date the mailed payment or payment instrument is postmarked."
    }
  ],
